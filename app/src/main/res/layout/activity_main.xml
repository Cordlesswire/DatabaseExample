<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.firebaseapp.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Temporary Text"
        android:padding="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/write_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Write Data to Firebase"/>



    <Button
        android:id="@+id/retrieve_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retrieve Data from Firebase"/>
</LinearLayout>
